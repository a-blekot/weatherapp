<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details.DetailsActivity">

    <TextView
        android:id="@+id/location_name"
        style="@style/details_name"
        app:layout_constraintBottom_toTopOf="@+id/coordinates"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Sun Francisco, USA" />

    <TextView
        android:id="@+id/temp"
        style="@style/details_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:text="22,2 C" />

    <TextView
        android:id="@+id/wind_speed"
        style="@style/details_main"
        app:layout_constraintBaseline_toBaselineOf="@+id/temp"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_goneMarginStart="8dp"
        tools:text="4,0 m/s" />

    <ImageView
        android:id="@+id/wind_degree_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:contentDescription="@string/wind_degree_description"
        android:rotation="45"
        android:src="@drawable/wind_degree"
        app:layout_constraintBottom_toBottomOf="@+id/wind_speed"
        app:layout_constraintStart_toEndOf="@+id/wind_speed"
        app:layout_constraintTop_toTopOf="@+id/wind_speed" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="@dimen/adaptive"
        android:layout_height="@dimen/adaptive"
        android:layout_marginTop="@dimen/margin_small"
        android:contentDescription="@string/weather_icon_description"
        android:src="@drawable/s01d"
        app:layout_constraintBottom_toTopOf="@+id/temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp_feels_like"
        style="@style/details_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp"
        tools:text="Feels like 20,0 C" />

    <TextView
        android:id="@+id/pressure"
        style="@style/details_info"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_feels_like"
        tools:text="Presure: 1020 hPa" />

    <TextView
        android:id="@+id/humidity"
        style="@style/details_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pressure"
        tools:text="Humidity: 52%" />

    <TextView
        android:id="@+id/sys_sunrise"
        style="@style/details_info"
        app:layout_constraintBaseline_toBaselineOf="@+id/pressure"
        app:layout_constraintStart_toEndOf="@id/barrier"
        tools:text="Sunrise: 04:45:12" />

    <TextView
        android:id="@+id/sys_sunset"
        style="@style/details_info"
        app:layout_constraintBaseline_toBaselineOf="@+id/humidity"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_goneMarginStart="8dp"
        tools:text="Sunset: 21:30:30" />

    <TextView
        android:id="@+id/timezone"
        style="@style/details_info"
        app:layout_constraintBaseline_toBaselineOf="@+id/temp_feels_like"
        app:layout_constraintStart_toEndOf="@id/barrier"
        tools:text="GMT +03:00" />

    <TextView
        android:id="@+id/coordinates"
        style="@style/details_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Lat: 50,4300, Lon: 30,5200" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_update_location"
        style="@style/fab"
        android:onClick="update"
        app:srcCompat="@drawable/ic_update"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="temp,humidity,pressure,temp_feels_like" />

</androidx.constraintlayout.widget.ConstraintLayout>