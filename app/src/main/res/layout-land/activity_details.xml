<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details.DetailsActivity">

    <TextView
        android:id="@+id/details_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:padding="8dp"
        android:text="@string/details_location_name"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/details_main_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/details_temp_label"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_location_name" />

    <TextView
        android:id="@+id/details_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/details_wind_speed"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_temp_feels_like" />

    <ImageView
        android:id="@+id/details_wind_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/wind_degree_description"
        android:rotation="45"
        android:src="@drawable/wind_degree"
        app:layout_constraintBottom_toBottomOf="@+id/details_wind_speed"
        app:layout_constraintStart_toEndOf="@+id/details_wind_speed"
        app:layout_constraintTop_toTopOf="@+id/details_wind_speed" />

    <ImageView
        android:id="@+id/details_weather_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/weather_icon_description"
        android:src="@drawable/s01d"
        app:layout_constraintBottom_toBottomOf="@id/details_wind_speed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/details_location_name"
        app:layout_constraintTop_toBottomOf="@id/details_location_name" />

    <!--    android:scaleX="8"-->
    <!--    android:scaleY="8"-->


    <TextView
        android:id="@+id/details_weather_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/details_weather_icon"
        app:layout_constraintStart_toStartOf="@+id/details_weather_icon"
        app:layout_constraintTop_toBottomOf="@+id/details_weather_icon"
        tools:text="Sun" />

    <TextView
        android:id="@+id/details_temp_feels_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_main_temp"
        tools:text="Feels like" />

    <TextView
        android:id="@+id/details_weather_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:lines="2"


        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/details_weather_icon"
        app:layout_constraintTop_toBottomOf="@+id/details_weather_main"
        tools:text="Weather description" />

    <TextView
        android:id="@+id/details_main_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_location_name"
        tools:text="Presure" />

    <TextView
        android:id="@+id/details_sys_sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_main_humidity"
        tools:text="Sunrise" />

    <TextView
        android:id="@+id/details_sys_sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/details_sys_sunrise"
        tools:layout_editor_absoluteX="180dp"
        tools:text="Sunset" />

    <TextView
        android:id="@+id/details_timezone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_sys_sunset"
        tools:text="GMT +3" />

    <TextView
        android:id="@+id/details_main_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_main_pressure"
        tools:text="Humidity" />

    <TextView
        android:id="@+id/details_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Coordinates" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/update_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:onClick="update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/update" />

    <ProgressBar
        android:id="@+id/progress_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="366dp"
        tools:visibility="visible" />

    <!--    app:srcCompat="mater"-->
    <!--    android:tint="@android:color/holo_blue_dark"-->

</androidx.constraintlayout.widget.ConstraintLayout>